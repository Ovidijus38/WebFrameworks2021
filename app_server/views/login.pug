extends layout
block content
  .container
    .row
      .col-md-6.col-md-offset-3
        .panel.panel-login
          .panel-heading
            .row
              .col-xs-6
                a#login-form-link.active(href='#') Login
              .col-xs-6
                a#register-form-link(href='register') Register
            hr
          .panel-body
            .row
              .col-lg-12
                form#login-form(action='airlinesList' method='post' role='form' style='display: block;')
                  .form-group
                    input#username.form-control(type='text' name='username' tabindex='1' placeholder='Email' value='')
                  .form-group
                    input#password.form-control(type='text' name='phone' tabindex='2' placeholder='Phone')
                  .form-group
                    .row
                      .col-sm-6.col-sm-offset-3
                        a#login-submit.form-control.btn.btn-login(type='submit' name='login-submit' tabindex='3' value='Log In', href='airlinesList') Login

